<!DOCTYPE html>
<html>
  <head>
    <title>Ergon</title>
    <meta content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" name="viewport" />
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <%= favicon_link_tag('favicon.ico') %>

    <script>
        $(function () {
            var offset = $('#headerContainer').offset();
            $(window).scroll(function () {

                if ($(this).scrollTop() > offset.top) {
                    $('#headerContainer').addClass('is-fixed');
                } else {
                    $('#headerContainer').removeClass('is-fixed');
                }
            });
        });
    </script>
    <style>
        .is-fixed {
            position: fixed;
            top: 0;
            left: 0;
            z-index: 1000;
            width: 100%;
        }

        #headerContainer{
          z-index: 10;
        　height: 64px;
          position: -webkit-sticky;
          position: sticky;
          top: 0;
          width: 100%;
          text-align: center;
          z-index: 2;
          background: rgba(0,0,0,0.8);
          box-shadow: 0px 0px 10px 0px rgba(0, 0, 0, 0.25);
          margin-bottom: 30px;
          margin-top: 20px;
        }
    </style>
  </head>

  <body>
    <div id="headerTopicContainer">
      <h1>
        <%=link_to root_path do %>
          <%=image_tag "ErgonLogo.png",class: "logo" %>
        <% end %>
      </h1>
    </div>

    <header id="headerContainer" class="articles-Wrapper">
          <ul class="clearfix header-center menu">
            <% if user_signed_in? %>
              <div class="left">
                <li><a href="/" class="btn2"><i class="fas fa-home"></i> トップ</a></li>
              </div>
              <div class="right">
                <li class="menu_single">
                  <%= link_to user_path(current_user) do %>
                  <%= attachment_image_tag current_user, :image, :fill, 40, 40,fallback: "no_image_man.jpg", size:'40x40', format: 'jpeg',class: "rounded-circle btn4 init-bottom" %>
                  <% end %>
                  <ul class="menu_second-level">
                    <li>
                      <%=link_to new_work_path do %>
                      <span class="btn4"><i class="fas fa-pen-square"></i> 投稿</span>
                      <% end %>
                    </li>
                    <li>
                      <%= link_to destroy_user_session_path,method: :delete do %>
                      <span class="btn4"><i class="fas fa-sign-out-alt"></i> ログアウト</span>
                      <% end %>
                    </li>
                  </ul>
                </li>
            <% else %>
                <li>
                <%= link_to "新規登録",new_user_registration_path,class: "nav-link btn4" %>
                </li>
                <li>
                <%= link_to "ログイン",new_user_session_path,class: "btn4" %>
                </li>
              </div>
            <% end %>
          </ul>
    </header>
    <div id="wrapper">
    <div class="container content-center">
      <%= yield %>
    </div>
    <%= render 'shared/footer' %>
  </div>
  </body>
</html>