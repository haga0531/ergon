<table class="table">
	<% @all_ranks.each do |work| %>
		<div class="small_box">
			<div class="small_box_image">
		      	<%= link_to(work_path(work)) do %>
		      	<%= attachment_image_tag work, :image, :fill, 60, 40,fallback: "no_image.jpg", size:'60x40', format: 'jpeg' %>
		      	<% end %>
		    </div>
	ã€€	    <div class="small_box_item">
				<%= link_to(work_path(work)) do %>
		      	<strong><%= work.title %></strong><br>
		      	<p>
				   <%= work.created_at.strftime('%Y/%m/%d') %>
				</p>
				<span id="work-<%= work.id %>-like1">
				    <% if user_signed_in? %>
					  <% if work.like_user(current_user.id) %>
					    <div class="small_like">
					      <i class="fas fa-heart"></i>
					      <span>
					        <%= work.likes_count %>
					      </span>
					  	</div>
					  <% else %>
					    <div class="small_like">
					      <i class="far fa-heart"></i>
					      <span>
					        <%= work.likes_count %>
					      </span>
					  </div>
					  <% end %>
					<% else %>
					  <i class="far fa-heart"></i>
					  <span>
					    <%= work.likes_count %>
					  </span>
					<% end %>
				</span>
				<% end %>
			</div>
		</div>
  	<% end %>
