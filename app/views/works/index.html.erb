		<h2>人気サービス</h2>
		<table class="table">
			<% @all_ranks.each_with_index do |work,i| %>
			<% if i == 1 %>
			      	<div class="work_box1">
				      	<%= link_to(work_path(work)) do %>
				      	<%= attachment_image_tag work, :image, :fill, 260, 154,fallback: "no_image.jpg", size:'260x154', format: 'jpeg' %>
