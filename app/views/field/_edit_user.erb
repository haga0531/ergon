<div id="con3" class="modal-content">
	<div class="fix">
	<p><a class="modal-close"><i class="far fa-times-circle"></i></i></a></p>
		<div class="text-align">
	    <h2>新規登録</h2>
		<%= form_for(@user) do |f| %>

			<div class="field">
				<p>ニックネーム</p>
				<%= f.text_field :name %>
			</div>

			<div class="field">
				<p>プロフィール</p>
				<%= f.text_area :introduction %>
			</div>

			<p>アイコン</p>
			<span class="btn btn-info btn-file">
				画像を選択<%= f.attachment_field :image %>
			</span>

			<div class="actions">
				<%= f.submit "更新する", class: "btn btn-sign" %>
			</div>

		<% end %>
		</div>
	</div>
</div>