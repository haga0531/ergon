<h3><%=link_to current_user.name, edit_user_path(current_user)%></h3>

<%=link_to "作品を投稿する",new_work_path %>
<%=link_to "プロフィール編集",edit_user_path %>

<h3>投稿サービス</h3>

<table class="table">
	<% @works.each do |work| %>
	  <tbody>
	    <tr>
	      <th scope="row">
	      	<%= link_to(work_path(work)) do %>
	      	<%= attachment_image_tag work, :image, :fill, 200, 200,fallback: "no_image.jpg", size:'200x200', format: 'jpeg' %><br>
	      	<%= work.title %>
	      	<% end %>
	      </th>
	    </tr>
	  </tbody>
  	<% end %>
</table>
