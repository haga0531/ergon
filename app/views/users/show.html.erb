<div class="user_show">
	<div class="user_profile">
		<%= attachment_image_tag @user, :image, :fill, 105, 105,fallback: "no_image_man.jpg", size:'105x105', format: 'jpeg',class: "rounded-circle" %>
		<p class="user_name"><%= current_user.name %></p>
		<P class="user_introduction"><%= @user.introduction %></P>
		<%=link_to edit_user_path(current_user) do %>
			<span class="raised user_edit"><i class="fas fa-user-edit"></i></span>
		<% end %>
	</div>
	<hr>
	<div class="user_posted">
		<!-- タブメニュー
		 activeクラスに、クリック済のデザインを設定したcssを指定 -->
		<ul class="tab clearfix">
		  <li class="active">投稿サービス</li>
		  <li>コメント</li>
		  <li>いいね</li>
		</ul>
		<!-- コンテンツ
		 全体を非表示にし、showクラスが付いたコンテンツのみ表示 -->
		<div class="area">
		  <ul class="show">
		    <div class="user_posted">
				<table class="table">
					<% @works.each do |work| %>
					  <tbody>
					    <tr>
					      <th scope="row">
					      	<div class="show_work_box">
					      	<%= link_to(work_path(work)) do %>
					      	<%= attachment_image_tag work, :image, :fill, 260, 200,fallback: "no_image.jpg", size:'260x200', format: 'jpeg' %>
					      	<div class="work_box_item">
							      	<strong><%= work.title %></strong>
							      	<p>
									   <%= work.created_at.strftime('%Y/%m/%d') %>
									</p>
							</div>
					      	<% end %>
					      	</div>
					      </th>
					    </tr>
					  </tbody>
				  	<% end %>
				</table>
			</div>
		  </ul>
		  <ul>
		  	<div class="user_posted">
				<table class="table">
					<% @comments.each do |comment| %>
					  <tbody>
					    <tr>
					      <th scope="row">
					      	<div class="show_work_box">
						      	<% work = Work.find_by(id: comment.work_id) %>
						      	<%= link_to(work_path(work)) do %>
						      	<%= attachment_image_tag work, :image, :fill, 260, 160,fallback: "no_image.jpg", size:'260x160', format: 'jpeg' %>
						      	<div class="work_box_item">
							      	<strong><%= work.title %></strong>
							      	<p>
									   <%= work.created_at.strftime('%Y/%m/%d') %>
									</p>
								</div>
						      	<% end %>
					      	</div>
					      </th>
					    </tr>
					  </tbody>
				  	<% end %>
				</table>
			</div>
		  </ul>
		  <ul>
		  	<div class="user_posted">
				<table class="table">
					<% @likes.each do |like| %>
					  <tbody>
					    <tr>
					      <th scope="row">
					      	<% work = Work.find_by(id: like.work_id) %>
					      	<%= link_to(work_path(work)) do %>
					      	<%= attachment_image_tag work, :image, :fill, 260, 200,fallback: "no_image.jpg", size:'260x200', format: 'jpeg' %><br>
					      	<%= work.title %>
					      	<% end %>
					      </th>
					    </tr>
					  </tbody>
				  	<% end %>
				</table>
			</div>
		  </ul>
		</div>
	</div>
</div>
